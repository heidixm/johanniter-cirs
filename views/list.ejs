<% layout('layout', { title: 'CIRS Übersicht' }); %>

<div class="card">
  <div style="display:flex;justify-content:space-between;align-items:center;">
    <h2>Übersicht der Meldungen</h2>
    <a href="/new" class="btn btn-primary">Neue Meldung</a>
  </div>

  <% if (!rows.length) { %>
    <p class="muted">Noch keine Meldungen vorhanden.</p>
  <% } else { %>
    <table style="margin-top:12px;">
      <thead><tr><th>ID</th><th>Kategorie</th><th>Titel</th><th>Ort</th><th>Datum</th></tr></thead>
      <tbody>
        <% rows.forEach(r => { %>
          <tr>
            <td><a href="/report/<%= r.id %>"><%= r.id %></a></td>
            <td><%= r.category %></td>
            <td><%= r.title %></td>
            <td><%= r.location %></td>
            <td><%= (r.created_at||'').substring(0,10) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

