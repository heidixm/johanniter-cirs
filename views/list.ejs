<% layout('layout', { title: 'CIRS – Übersicht', logoUrl: '/logo.png' }); %>

<div class="actions">
  <a class="btn" href="/new">Neue Meldung erfassen</a>
</div>

<div class="card">
  <h2>Übersicht Meldungen</h2>

  <% if (ok) { %>
    <div class="success" style="margin:12px 0;">Vielen Dank! Ihre Meldung wurde gespeichert und weitergeleitet.</div>
  <% } %>

  <% if (!rows || !rows.length) { %>
    <p class="muted" style="margin-top:10px;">Noch keine Einträge vorhanden.</p>
  <% } else { %>
    <table class="table" style="margin-top:14px;">
      <thead>
        <tr>
          <th>#</th>
          <th>Kategorie</th>
          <th>Titel</th>
          <th>Ort</th>
          <th>Erfasst am</th>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(r => { %>
          <tr>
            <td><a href="/report/<%= r.id %>"><%= r.id %></a></td>
            <td><%= r.category %></td>
            <td><%= r.title %></td>
            <td><%= r.location %></td>
            <td><%= (r.created_at||'').substring(0,10) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

